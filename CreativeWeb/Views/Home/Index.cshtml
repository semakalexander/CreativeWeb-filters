@{
    ViewBag.Title = "Home Page";
}

<div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li class="active" data-target="#carousel" data-slide-to="0"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/1.jpg" alt="" />
            <div class="carousel-caption">
                <h3>1 slide</h3>
                <p>1 description</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/2.jpg" alt="" />
            <div class="carousel-caption">
                <h3>2 slide</h3>
                <p>2 description</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/3.jpg" alt="" />
            <div class="carousel-caption">
                <h3>3 slide</h3>
                <p>3 description</p>
            </div>
        </div>
    </div>

    <a href="#carousel" class="left carousel-control" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hiden="true"></span>
        <span class="sr-only">previous</span>
    </a>
    <a href="#carousel" class="right carousel-control" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hiden="true"></span>
        <span class="sr-only">next</span>
    </a>
</div>