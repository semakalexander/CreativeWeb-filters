@model  IEnumerable<CreativeWeb.Models.Item>
@using GridMvc.Html;
@{
    ViewBag.Title = "Адмін панель: список товарів";
    Layout = "~/Views/_AdminLayout.cshtml";   
}


@Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.Id, true);
    columns.Add(m => m.Barcode).Titled("Штрихкод").Sortable(true).Filterable(true);
    columns.Add(m => m.Name).Titled("Назва").Sortable(true).Filterable(true);
    columns.Add(m => m.Description).Titled("Опис").Sortable(true).Filterable(true);
    columns.Add(m => m.Type).Titled("Тип").Sortable(true).Filterable(true);
    columns.Add(m => m.Count).Titled("Кількість").Sortable(true).Filterable(true).SetWidth(10);
    columns.Add(m => m.Price).Titled("Ціна").Sortable(true).Filterable(true);
    columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(m => Html.ActionLink("Редагувати", "Edit", new { id = m.Id }));
    columns.Add().Encoded(false).Sanitized(false).SetWidth(25).RenderValueAs(m => Html.ActionLink("Видалити", "Delete", new { id = m.Id }));
}).WithPaging(20)



  